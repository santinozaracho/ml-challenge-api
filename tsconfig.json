{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "lib": ["es6", "es2020"],
      "outDir": "build",
      "rootDir": "src",
      "noEmit": true,
      "strict": true,
      "noImplicitAny": true,
      "baseUrl": ".",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true
    }
  }
  